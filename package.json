{
  "name": "@line/bot-sdk",
  "version": "__LINE_BOT_SDK_NODEJS_VERSION__",
  "description": "Node.js SDK for LINE Messaging API",
  "type": "module",
  "engines": {
    "node": "18.x"
  },
  "main": "app.js",  // Change to the main server file you're creating
  "scripts": {
    "pretest": "npm run format && npm run build",
    "test": "vitest run",
    "covtest": "vitest run --coverage",
    "prettier": "prettier \"{lib,test}/**/*.ts\"",
    "format": "npm run prettier -- --write",
    "format:check": "npm run prettier -- -l",
    "clean": "rm -rf dist/*",
    "copy-rollup": "node ./scripts/workaround-for-rollup.mjs",
    "prebuild": "npm run format:check && npm run clean && npm run copy-rollup",
    "build": "tsc -p . && tsc -p ./tsconfig.cjs.json && echo \"{\\\"type\\\": \\\"commonjs\\\"}\" > dist/cjs/package.json",
    "docs": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:deploy": "./scripts/deploy-docs.sh",
    "apidocs": "typedoc --excludePrivate --plugin typedoc-plugin-markdown --out docs/apidocs lib/index.ts",
    "release": "npm run build && npm publish --access public",
    "start": "node app.js"  // This is the important change; run your Express server here
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:line/line-bot-sdk-nodejs.git"
  },
  "keywords": [
    "node",
    "line",
    "sdk"
  ],
  "dependencies": {
    "express": "^4.17.1",  // Add express
    "body-parser": "^1.19.0",  // Add body-parser
    "axios": "^1.7.4",  // Keep axios or add it if missing
    "@types/node": "^20.0.0"
  },
  "devDependencies": {
    "@types/express": "4.17.21",
    "@types/finalhandler": "1.2.3",
    "@types/mocha": "10.0.8",
    "@vitest/coverage-v8": "^2.0.0",
    "express": "4.21.0",
    "finalhandler": "1.3.1",
    "husky": "9.1.6",
    "msw": "2.4.6",
    "prettier": "3.3.3",
    "ts-node": "10.9.2",
    "typedoc": "^0.26.6",
    "typedoc-plugin-markdown": "^4.2.6",
    "typescript": "^5.5.4",
    "vitepress": "^1.0.1",
    "vitest": "^2.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format:check",
      "pre-push": "npm run format:check && npm run build && npm run test"
    }
  },
  "license": "Apache-2.0"
}
